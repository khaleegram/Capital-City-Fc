
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is an authenticated admin
    function isAdmin() {
      return request.auth != null;
    }

    // Team Profile: Public can read, admins can write.
    match /teamProfile/{profileId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Players, News, Videos, Fixtures, Recaps: Public can read, admins can write.
    match /{collection}/{docId} 
      where collection in ['players', 'news', 'videos', 'fixtures', 'recaps', 'formations'] {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Live Events (subcollection): Public can read, admins can write.
    match /fixtures/{fixtureId}/liveEvents/{eventId} {
       allow read: if true;
       allow write: if isAdmin();
    }
    
    // Player-Video Tags (junction table): Public can read, admins can write.
    match /playerVideos/{tagId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // User Push Tokens: Only the authenticated user can manage their own token.
    match /userPushTokens/{userId} {
      allow read, write: if isAdmin() && request.auth.uid == userId;
    }
  }
}
