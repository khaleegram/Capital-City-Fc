
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to most collections
    match /{collection}/{document} 
      where collection in ['players', 'news', 'videos', 'fixtures', 'recaps', 'teamProfile', 'formations'] {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read on live events subcollection
    match /fixtures/{fixtureId}/liveEvents/{eventId} {
       allow read: if true;
       allow write: if request.auth != null;
    }
    
    // Allow public read for player video tags
    match /playerVideos/{tagId} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    // Protect user push tokens
    match /userPushTokens/{userId} {
      allow read: if false; // No one can read other users' tokens
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
